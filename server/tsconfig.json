{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": false,
        "outDir": "./build"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/"]
}
